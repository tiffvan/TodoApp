<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_todo"
        tools:context=".AddTodo">

    <TextView
            android:id="@+id/textTitle"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:text="Title"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.034"
            app:layout_constraintVertical_bias="0.017"/>

    <EditText
            android:id="@+id/editTitle"
            android:layout_width="384dp"
            android:layout_height="88dp"
            android:layout_alignBaseline="@+id/textTitle"
            android:layout_alignBottom="@+id/textTitle"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="8dp"
            android:ems="15"
            android:inputType="text"
            android:text=""
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textTitle" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.272" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/textImportance"
            android:layout_width="132dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:text="Importance"
            android:gravity="start"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.034"
            app:layout_constraintVertical_bias="0.22"/>
    <TextView
            android:id="@+id/important"
            android:layout_width="79dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Important"
            android:gravity="bottom"
            app:layout_constraintHorizontal_bias="0.228" app:layout_constraintVertical_bias="0.387"/>

    <TextView
            android:id="@+id/medium"
            android:layout_width="79dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Medium"
            android:gravity="bottom"
            app:layout_constraintVertical_bias="0.387" app:layout_constraintHorizontal_bias="0.536"/>
    <TextView
            android:id="@+id/notImportant"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:text="Not important"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="bottom"
            app:layout_constraintHorizontal_bias="0.851" app:layout_constraintVertical_bias="0.392"/>
    <ImageButton
            android:id="@+id/imageImportant"
            android:layout_width="55dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/ic_label_red"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTitle"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintVertical_bias="0.163"/>

    <ImageButton
            android:id="@+id/imageMedium"
            android:layout_width="55dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/ic_label_yellow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTitle"
            app:layout_constraintVertical_bias="0.163"/>

    <ImageButton
            android:id="@+id/imageNotImportant"
            android:layout_width="55dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/ic_label_green"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTitle"
            app:layout_constraintHorizontal_bias="0.805"
            app:layout_constraintVertical_bias="0.163"/>

    <Button
            android:id="@+id/addTodoButton"
            android:text="Add todo"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>


</android.support.constraint.ConstraintLayout>